<?xml version="1.0"?>
<!-- this is for the direct .swf file, which can offer better resolutions for
premium members
-->

<site site="http://www.crunchyroll.com/swf/.*qual=480" 
plugin="http://www.crunchyroll.com/swf/vidplayer.swf.*"
initialState="playing" version="2.0"
windowHeight="512" 
windowWidth="854">
	<crop x="0" y="0" width="0" height="-32"/>
<!-- pausing works on this, but seeking is nasty -->
<seekbar type="thumb">
		<start x="82" y="-15"/>
		<end x="378" y="-15"/>
		<played>
			<color rgb="ffffff"/>
		</played>
	</seekbar>

	<state name="playing">
		<event>
			<condition>
				<command name="pause"/>
			</condition>
			<action>
				<click x="20" y="-15"/>
				<move x="0" y="0" />
				<goto state="paused"/>
			</action>
		</event>
	</state>

	<state name="paused">
		<event>
			<condition>
				<command name="play"/>
			</condition>
			<action>
				<click x="20" y="-15"/>
				<move x="0" y="0" />
				<goto state="playing"/>
			</action>
		</event>
		<event>
			<condition>
				<or>
					<color x="19" y="-15" rgb="808080"/>
					<color x="19" y="-15" rgb="333333"/>
				</or>
			</condition>
			<action>
				<goto state="playing"/>
			</action>
		</event>
		<event>
			<condition>
				<color x="8" y="8" rgb="555555"/>
			</condition>
			<action>
				<goto state="playing" />
			</action>
		</event>
	</state>
	
</site>
