<?xml version="1.0"?>
<!-- this is for the direct .swf file, which can offer better resolutions,
but is buggy with width/height and showing ads
-->

<site site="http://www.crunchyroll.com" 
plugin="http://www.crunchyroll.com/swf/vidplayer.swf.*"
initialState="playing" version="2.0">

	<crop x="0" y="0" width="0" height="-32"/>
	<seekbar type="thumb">
		<start x="82" y="358"/>
		<end x="334" y="358"/>
		<played>
			<color rgb="333333"/>
		</played>
	</seekbar>

	
	<state name="playing">
		<event>
			<condition>
				<command name="pause"/>
			</condition>
			<action>
				<click x="312" y="206"/>
				<goto state="paused"/>
			</action>
		</event>
		<event>
			<condition>
				<color x="8" y="8" rgb="555555"/>
			</condition>
			<action>
				<goto state="playing" />
			</action>
		</event>
	</state>
	<!-- this is for later when i figure out how to support it -->
	<state name="ad_playing">
		<event>
			<condition>
				<or>
					<color x="19" y="365" rgb="ffffff"/>
					<not>
						<color x="8" y="8" rgb="555555"/>
					</not>
				</or>				
			</condition>
			<action>
				<goto state="playing"/>
			</action>
		</event>
	</state>

	<state name="paused">
		<event>
			<condition>
					<command name="play"/>
			</condition>
			<action>
				<click x="312" y="206"/>
				<goto state="playing"/>
			</action>
		</event>
		<event>
			<condition>
				<or>
					<color x="19" y="365" rgb="808080"/>
					<color x="19" y="365" rgb="333333"/>
				</or>
			</condition>
			<action>
				<goto state="playing"/>
			</action>
		</event>
		<event>
			<condition>
				<color x="8" y="8" rgb="555555"/>
			</condition>
			<action>
				<goto state="playing" />
			</action>
		</event>
	</state>
	
</site>
